# MariaDB-specific config file.
# Read by /etc/mysql/my.cnf


[mysql]
default-character-set = utf8mb4


[client]
# Default is Latin1, if you need UTF-8 set this (also in server section)
default-character-set = utf8


[mysqld]
# Character sets
# Default is Latin1, if you need UTF-8 set all this (also in client section)
character-set-server  = utf8
collation-server      = utf8_general_ci

# Import all .cnf files from configuration directory
!includedir /etc/mysql/mariadb.conf.d/

bind-address = 0.0.0.0

innodb-file-format=barracuda
innodb-file-per-table=1
innodb-large-prefix=1
character-set-client-handshake = FALSE
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# THIS IS SMALL CONFIGURATION~
# default REPEATABLE-READ
transaction-isolation   = READ-COMMITTED
# because of concurrency access is low (using only less than 10 person)
max_connections         = 50
# default 600s is very long(memory is largely wasted), so it reduce to 1 minute(60s)
wait_timeout			= 60
# query_cache is useless. In fact slow. - it was removed on MySQL 8.0
query_cache_type        = OFF
query_cache_size        = 0
# default is 268435456
innodb_buffer_pool_size = 100M
innodb_log_file_size    = 25M
innodb_log_buffer_size	= 8M
innodb_flush_log_at_trx_commit = 2
innodb_flush_method = O_DIRECT

[mysqld_safe]
skip_log_error
syslog


[mysqldump]
quick
quote-names
max_allowed_packet	= 16M
